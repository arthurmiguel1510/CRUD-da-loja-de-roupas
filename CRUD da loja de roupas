SELECT * FROM produtos;
   
SELECT p.nome, p.preco, c.nome_categoria
FROM produtos p
  
JOIN categorias c ON p.id_categoria = c.id_categoria
WHERE c.nome_categoria = 'Vestidos';
  
SELECT u.nome, p.nome, c.quantidade, p.preco
FROM carrinho c
JOIN usuarios u ON c.id_usuario = u.id_usuario
JOIN produtos p ON c.id_produto = p.id_produto
WHERE u.id_usuario = 1;
   
SELECT p.id_pedido, p.status, p.valor_total, p.data_pedido
FROM pedidos p
WHERE p.id_usuario = 1;
  
UPDATE produtos
SET estoque = estoque - 2
WHERE id_produto = 1;
   
  
UPDATE pedidos
SET status = 'enviado'
WHERE id_pedido = 1;
   
   
UPDATE usuarios
SET endereco = 'Rua Nova, 456'
WHERE id_usuario = 1;
   
DELETE FROM carrinho
WHERE id_usuario = 1 AND id_produto = 1;

  
DELETE FROM pedidos
WHERE id_pedido = 1;
 
   
DELETE FROM usuarios
WHERE id_usuario = 1;
 
